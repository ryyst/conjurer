    _tags="enabled_in_world"
    item_name="Ball"
    max_child_items="0"
    is_pickable="1"
    is_equipable_forced="1"
    ui_sprite="mods/raksa/files/custom_entities/ball/ui_gfx.png"
    ui_description="A nice round ball."
    preferred_inventory="QUICK"
  ></ItemComponent>

  <UIInfoComponent
    _tags="enabled_in_world"
    name="Ball"
  ></UIInfoComponent>

  <AbilityComponent
    ui_name="Ball"
    throw_as_item="1"
    mana_max="0"
    >
    <gun_config
      deck_capacity="0"
    ></gun_config>
  </AbilityComponent>
</Entity>
