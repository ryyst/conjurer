    _tags="enabled_in_hand,enabled_in_world"
    _enabled="1"
    offset_x="3.5"
    offset_y="3.5"
    has_special_scale="1"
    special_scale_x="0.65"
    special_scale_y="0.65"
    image_file="mods/raksa/files/custom_entities/ball/item_gfx.png"
  ></SpriteComponent>

