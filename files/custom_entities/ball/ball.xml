  ></PhysicsThrowableComponent>

  <ProjectileComponent
    _tags="enabled_in_world"
    speed_min="80"
    speed_max="140"
    lifetime="-1"
    penetrate_entities="0"
    velocity_sets_rotation="0"
    angular_velocity="3"
    bounce_energy="0.85"
    bounces_left="2000"
    bounce_always="1"
    bounce_at_any_angle="1"
    bounces_left="250"
    on_collision_die="0"
