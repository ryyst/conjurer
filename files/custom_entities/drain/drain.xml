    material_type="0"
    barrel_size="9999999999999999999999999999999999999999999999999999"
    num_cells_sucked_per_frame="10"
  ></MaterialSuckerComponent>

  <!-- Sands -->
  <MaterialSuckerComponent
    material_type="1"
    barrel_size="9999999999999999999999999999999999999999999999999999"
    num_cells_sucked_per_frame="10"
  ></MaterialSuckerComponent>

  <!-- Gas -->
  <MaterialSuckerComponent
    material_type="2"
    barrel_size="9999999999999999999999999999999999999999999999999999"
    num_cells_sucked_per_frame="10"
  ></MaterialSuckerComponent>
