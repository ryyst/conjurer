    body_id="1"
    centered="1"
    image_file="mods/raksa/files/wands/carrot/item_gfx.png"
    material="fungi"
  ></PhysicsImageShapeComponent>

  <VelocityComponent
    _tags="enabled_in_world"
  ></VelocityComponent>

