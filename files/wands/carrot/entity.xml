    <gun_config
      deck_capacity="0"
    ></gun_config>
  </AbilityComponent>

  <LuaComponent
    _tags="enabled_in_hand"
    script_enabled_changed="mods/raksa/files/wands/carrot/toggle_breathing.lua"
  ></LuaComponent>

  <!-- Blink shooting action -->
  <LuaComponent
    _tags="enabled_in_hand"
    script_source_file="mods/raksa/files/wands/carrot/blink.lua"
